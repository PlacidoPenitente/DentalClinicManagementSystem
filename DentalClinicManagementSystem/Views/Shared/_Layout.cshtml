<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>

<div class="workspace" style="overflow: auto;">
    <div class="container" style="display: flex; flex-direction: column; height: 100%;">
        @RenderBody()
    </div>
</div>
<div class="footer">
    <div class="container-fluid bg-dark">
        <p style="margin: auto; text-align: center; color: white;">&copy; @DateTime.Now.Year - All ABout Teeth</p>
    </div>
</div>

@Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
